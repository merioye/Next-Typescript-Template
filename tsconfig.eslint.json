{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["@types/node", "jest", "cypress"]
  },
  "include": [
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/__tests__",
    "**/__mocks__",
    "**/*.{spec,test}.ts",
    "**/*.{spec,test}.tsx",
    "**/setupTests.ts",
    "cypress"
  ],
  "exclude": ["node_modules"]
}
