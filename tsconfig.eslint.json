{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@types/node", "jest"],
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    ".eslintrc.cjs",
    "next.config.js",
    "jest.config.js",
    "src/**/__tests__",
    "src/**/__mocks__",
    "src/**/setupTests.ts",
    "cypress/e2e",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules"]
}
